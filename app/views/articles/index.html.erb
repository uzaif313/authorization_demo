<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article if can? :show, article%></td>
        <td><%= link_to 'Edit', edit_article_path(article) if can? :edit, article%></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Article %>
  <%= link_to 'New Article', new_article_path %>
<% end %>